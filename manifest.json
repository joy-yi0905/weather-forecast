{
    "name": "天气预报",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "一款天气预报插件",
    "icons": {
        "16": "weather16.png",
        "32": "weather32.png",
        "48": "weather48.png",
        "128": "weather128.png"
